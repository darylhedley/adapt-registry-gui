{{#each plugins}}
<div class="plugin {{type}}">
    <div class="plugin-inner">
        <div class="plugin-type-tab">
        	<div class="plugin-type">
                <div class="plugin-type-icon icon-powercord"></div> 
                <div class="plugin-type-icon icon-paint-format"></div>   
                <div class="plugin-type-icon icon-tree"></div> 
                <div class="plugin-type-icon icon-cogs"></div> 
                <div class="plugin-type-icon icon-file"></div> 
            </div>
            <div class="plugin-hits icon-download3"> {{hits}}</div>
            <div class="plugin-stars icon-star3"> {{stargazers_count}}</div>
        </div>
        <div class="plugin-body-holder">
            <div class="plugin-name">{{name}}</div>
            <div class="plugin-description">
            	{{description}}
            </div>
            {{!--<a class="plugin-git">{{url}}</a>
            <a href="{{html_url}}" target="_blank" class="plugin-url">{{html_url}}</a>--}}
            <div class="git-hub-footer">
                <a href="{{owner.url}}" class="git-hub-author">
                    <img src="{{owner.avatar}}" class="git-hub-avatar"/>
                    <div class="git-hub-user">{{owner.username}}</div>
                </a>
                <a href="{{html_url}}" class="git-hub-link icon-github3"> 
                    <span class="git-hub-link-inner">GitHub</span>
                </a>
            </div>
        </div>
    </div>    
</div>
{{/each}}